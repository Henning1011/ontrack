<div class="container">

  <div class="playlist_header">

    <div class="playlist_image_container">
      <% if @playlist.photo.present? %>
          <%= cl_image_tag @playlist.photo.key, class: "playlist_image", alt: "Playlist Image" %>
        <% else %>
          <p>No playlist image available</p>
        <% end %>
    </div>

    <div class="text-btn-div">
      <div class="page_title">
        <h1><%= @playlist.name %></h1>
        <% if @playlist.description? %>
          <p><%= @playlist.description %></p>
        <% else %>
          <p><%= @playlist.name %> was created by <%= current_user.email %> on <%= @playlist.created_at.strftime('%B of %Y') %>.</p>
        <% end %>
      </div>

      <% @playlists.each do |playlist| %>
        <div class="card track-card border-0">
          <div class="card-body d-flex">
            <div class="p-2 flex-grow-1">
              <iframe style="border-radius:12px" src="https://open.spotify.com/embed/track/<%= @track.id %>?utm_source=generator" width="100%" height="80" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
            </div>
          </div>
        </div>
      <% end %>

      <% @playlists.each do |playlist| %>
        <div class="card track-card border-0">
          <div class="card-body d-flex">
            <div class="p-2 flex-grow-1">
              <iframe style="border-radius:12px" src="https://open.spotify.com/embed/track/<%= playlist_tracks_path(playlist, track.id) %>?utm_source=generator" width="100%" height="80" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
            </div>
          </div>
        </div>
      <% end %>

        <div class="playlist_btns">
          <%= link_to 'Edit playlist', edit_playlist_path, class: "text-btn" %>
          <%= link_to "Delete your playlist", playlist_path(@playlist), data: {turbo_method: :delete, turbo_confirm: "Do you want to delete your playlist?"}, class: "text-btn"%>
          <%= link_to "Back to your playlists", playlists_path, class: "text-btn"%>
        </div>
      </div>

  </div>
</div>
