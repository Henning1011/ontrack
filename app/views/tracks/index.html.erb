<h1>Hello there</h1>

<div class="row justify-content-center">

  <div class="col-sm-8 my-3">
    <ul>
      <li><%= link_to "#{@track.artists.first.name} - #{@track.name}", :controller => "tracks", :query => "#{@track.id}" %></li>
    </ul>
  </div>

  <div class="col-sm-8 my-3">
    <iframe style="border-radius:12px" src="https://open.spotify.com/embed/track/<%= @track.id %>?utm_source=generator" width="100%" height="250" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
  </div>

  <div data-controller="sliders" class="col-sm-8 my-3">
    <%= render 'range_sliders', track: @track %>
  </div>

</div>
