<div class="container">
  <div class="row justify-content-center">
    <ul>
      <% @recommendations.tracks.each do |track| %>
        <li class="list-group-item">
        <div class="card track-card border-0">
          <div class="card-body d-flex">

            <div class="p-2 flex-grow-1">
              <iframe style="border-radius:12px" src="https://open.spotify.com/embed/track/<%= track.id %>?utm_source=generator" width="100%" height="80" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
            </div>

            <div class="dropdown p-2 align-self-center">
              <button class="btn all-playlists-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Add to Playlist
              </button>
              <ul class="dropdown-menu">
                <%= render "playlists/add_one", playlists: @playlists, track: track %>
              </ul>
            </div>

          </div>
        </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
